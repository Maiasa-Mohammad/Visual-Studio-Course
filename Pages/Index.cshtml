@page
@model IndexModel
@{
    ViewData["Title"] = "Maiasa Mohamed - Music Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e1e2f, #2c2c54);
            color: white;
            text-align: center;
        }

        h1 {
            margin-top: 40px;
            font-size: 3rem;
            letter-spacing: 2px;
            text-shadow: 0 0 10px rgba(255,255,255,0.4);
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: #dcdcdc;
        }

        .video-container {
            width: 80%;
            max-width: 800px;
            margin: 0 auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.6);
        }

        iframe {
            width: 100%;
            height: 450px;
            border: none;
        }

        footer {
            margin-top: 40px;
            font-size: 0.9rem;
            opacity: 0.7;
        }
    </style>
</head>
<body>

    <h1 id="animatedTitle">Welcome to Maiasa Mohamed's Music Page 🎵</h1>

    <p>One of my favorite songs – enjoy the vibes!</p>

    <div class="video-container">
        <iframe src="https://www.youtube.com/embed/ktvTqknDobU"
                title="YouTube music video"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>

    <footer>
        ASP.NET Core Web App | Student: Maiasa Mohamed
    </footer>

    <script>
        const title = document.getElementById("animatedTitle");
        const colors = ["#ff7675", "#74b9ff", "#55efc4", "#ffeaa7", "#a29bfe"];
        let index = 0;
        let scale = 1;
        let growing = true;

        setInterval(() => {
            // Color animation
            title.style.color = colors[index];
            index = (index + 1) % colors.length;

            // Scale pulse animation
            if (growing) {
                scale += 0.02;
                if (scale >= 1.15) growing = false;
            } else {
                scale -= 0.02;
                if (scale <= 1) growing = true;
            }

            title.style.transform = `scale(${scale})`;
        }, 120);
    </script>

</body>
</html>
